{
    "name": "@dhis2/ui-root",
    "version": "7.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/dhis2/ui.git"
    },
    "author": "Viktor Varland <viktor@dhis2.org>",
    "contributors": [
        {
            "name": "Jan-Gerke Salomon",
            "email": "jan-gerke@dhis2.org",
            "url": "http://functionalprogramming.ninja"
        }
    ],
    "license": "BSD-3-Clause",
    "private": true,
    "workspaces": {
        "packages": [
            "collections/*",
            "components/*",
            "constants",
            "icons",
            "storybook"
        ]
    },
    "scripts": {
        "build": "./scripts/build.js",
        "setup": "./scripts/setup.js",
        "cy:start": "yarn build && STORYBOOK_TESTING=1 yarn start",
        "cy:open": "wait-on 'http://localhost:5000' && cypress open",
        "cy:run": "wait-on 'http://localhost:5000' && cypress run",
        "cy:test": "./scripts/cypress.js",
        "docs": "d2-utils-docsite build ./docs -o ./dist --reactDocs ./components/**/src/index.js --reactDocsOutputFile api.md --reactDocsLinkSource",
        "docs:serve": "d2-utils-docsite serve ./docs -o ./dist --reactDocs ./components/**/src/index.js --reactDocsOutputFile api.md --reactDocsLinkSource",
        "format": "d2-style apply",
        "lint": "d2-style check",
        "test": "d2-app-scripts test",
        "start": "yarn workspace ui-storybook start",
        "demo": "yarn workspace ui-storybook build"
    },
    "d2": {
        "docsite": {
            "name": "DHIS2 UI Components",
            "description": "Components and related resources for the DHIS2 design system"
        }
    },
    "dependencies": {
        "@dhis2/app-runtime": "^3.0.0",
        "@dhis2/cli-app-scripts": "^8.0.0",
        "@dhis2/cli-style": "^9.0.1",
        "@dhis2/cli-utils-cypress": "^8.0.1",
        "@dhis2/cli-utils-docsite": "^3.1.2",
        "@dhis2/cypress-commands": "^8.0.1",
        "@dhis2/cypress-plugins": "^8.0.1",
        "@dhis2/d2-i18n": "^1.1.0",
        "@manypkg/cli": "^0.18.0",
        "@svgr/cli": "^5.5.0",
        "@testing-library/react-hooks": "^7.0.1",
        "concurrently": "^6.2.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.6",
        "execa": "^5.1.1",
        "fast-glob": "^3.2.5",
        "find-up": "^5.0.0",
        "react": "16.13",
        "react-dev-utils": "^10.2.1",
        "react-dom": "16.13",
        "react-scripts": "^4.0.3",
        "rimraf": "^3.0.2",
        "styled-jsx": "^4.0.1",
        "wait-on": "^5.3.0"
    }
}
